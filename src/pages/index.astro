---
import PageHeader from "../components/PageHeader.astro";
import PageFooter from "../components/PageFooter.astro";
import EventSlider from "../components/EventSlider.astro";

import HomePagePosts from "../components/Blog/HomePagePosts.astro";

import BannerEvents from "../components/BannerEvents.astro";
import { playlists, morePlaylists } from "../lib/data";

import EventsTable from "../components/EventsTable.astro";
import EventCategories from "../components/EventCategories.astro";
import Ticker from "../components/Ticker.astro";

import Layout from "../layouts/Layout.astro";

---

<Layout title="Home">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-context"
    style="min-height:300px;--context-color:#000000;"
  >
    <PageHeader />

    <section class="text-center py-24 bg-black relative">
      <div class="absolute inset-0 w-full z-10  bg-black opacity-50"></div>
      <img src="/banner.jpg" alt="Background Image" class="absolute inset-0 w-full h-full object-cover opacity-40">
      <div class="relative z-10 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-customYellow">CELEBRATING MUSIC, ART, AND CULTURE</h1>
        <p class="mt-4 text-sm md:text-base lg:text-lg text-gray-300 max-w-3xl mx-auto">Experience the thrill of live music, celebrate diverse cultures, and immerse yourself in captivating art. Get ready to embark on an extraordinary journey of entertainment.</p>
        <div class="mt-8 flex justify-center space-x-4">
          <a href="#" class="bg-customYellow text-black py-2 px-6 hover:bg-customYellowHover">EVENTS CALENDAR</a>
          <a href="#" class="bg-gray-800 text-white py-2 px-6 hover:bg-gray-700">TICKETS</a>
        </div>
      </div>
      <!-- Thumbnails -->
      <div class="px-6 relative z-10 mt-12 max-w-7xl mx-auto">
        <div class="flex flex-wrap mt-6 gap-4">
          {morePlaylists.map((playlist) => <BannerEvents playlist={playlist} />)}
        </div>
      </div>
    </section>

    <Ticker />

    <EventCategories />

    <p class="mt-4 max-w-2xl mx-auto bg-black px-6 py-12 text-left">
      Experience the thrill of live music, celebrate diverse cultures, and immerse yourself in captivating art. Get ready to embark on an extraordinary journey of entertainment.
    </p>
    
    <EventsTable />

    <p class="mt-4 max-w-2xl mx-auto bg-black px-6 py-12 text-left">
      Experience the thrill of live music, celebrate diverse cultures, and immerse yourself in captivating art. Get ready to embark on an extraordinary journey of entertainment.
    </p>
   
    <!-- Event slider -->
    <div class="container max-w-screen-lg mx-auto px-4 ">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <h2 class="text-4xl my-8 md:text-5xl lg:text-7xl font-bold text-white text-center">Event Calendar</h2>
        <span></span>
      </div>
      
      <EventSlider />
    </div>

    <HomePagePosts />

    <section class="relative p-4 text-white text-center py-14 ">
      <div class="relative z-10 p-20 bg-customGray  rounded ">
        <h2 class="text-5xl font-bold">GET YOUR TICKET TODAY</h2>
        <p class="mt-4 max-w-2xl mx-auto">Experience the thrill, excitement, and magic of upcoming events. Don’t miss your chance to be part of the action – get your ticket today.</p>
        <button class="mt-12 px-8 py-4 bg-customYellow text-black hover:bg-customYellowHover">BUY TICKET NOW</button>
        <img src="/singer.png" alt="Background" class="absolute bottom-0 right-9 w-1/4 h-auto object-cover z-0">
      </div>
    </section>

  <PageFooter />
  
</Layout>
